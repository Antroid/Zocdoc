<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/actorPoster"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:contentDescription="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/actorName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/actorPoster"
        app:layout_constraintLeft_toLeftOf="@id/actorPoster"
        app:layout_constraintRight_toRightOf="@id/actorPoster"
        app:layout_constraintTop_toTopOf="@id/actorPoster"
        tools:text="Antonio Banderas" />

</androidx.constraintlayout.widget.ConstraintLayout>